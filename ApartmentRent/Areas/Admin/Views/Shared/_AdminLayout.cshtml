@{
    Layout = "_Layout";

    var current = ViewContext.RouteData.Values["controller"]?.ToString();
}
@RenderSection("scripts", false)
@section scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<ul class="nav nav-tabs mt-2 mb-3">
    <li class="nav-item">
        <a asp-action="Index" asp-controller="Apartment"
           class="nav-link @Nav.Active("Apartment", current)">
            Manage Apartments
        </a>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="Tag"
           class="nav-link @Nav.Active("Tag", current)">
            Manage Tags
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="ApartmentPicture"
           class="nav-link @Nav.Active("ApartmentPicture", current)">
            Manage Pictures
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="ApartmentProfilePicture"
           class="nav-link @Nav.Active("ApartmentProfilePicture", current)">
            Manage Profile Pictures
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="User"
           class="nav-link @Nav.Active("User", current)">
            Manage Users
        </a>
    </li>
</ul>

@RenderBody()

