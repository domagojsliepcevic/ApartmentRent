@model TagViewModel

@{
    ViewData["Title"] = " | Manage Tags";
}

<h1 class="mb-2">Manage Tags</h1>
<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Add a Tag</a></h5>
    </li>
</ul>
<table class="table align-middle table-bordered table-striped table-sm">
    <thead class="thead-dark">
        <tr class="align-middle">
            <th>
                Name
            </th>
            <th>
                NameEng
            </th>
            <th>
                Type
            </th>
            <th>
                Controls
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (Tag tag in Model.Tags)
        {
            <tr>
                <td>
                    @tag.Name
                </td>
                <td>@tag.NameEng</td>
                <td>@tag.Type.Name</td>
                <td>
                    <div class="float-right">
                        <a asp-action="Edit" asp-route-id="@tag.TagId"
                       class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@tag.TagId"
                       class="btn btn-primary">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>